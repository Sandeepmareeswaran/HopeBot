rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write only their own chat documents.
    // The document ID must match the user's email, which we use as a UID.
    match /chats/{userEmail} {
      allow read, write: if request.auth != null && request.auth.token.email == userEmail;
    }
  }
}
