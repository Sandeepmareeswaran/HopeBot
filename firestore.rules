
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // For this demo, we are allowing reads and writes to any chat document.
    // In a production app, you would want to lock this down to only the
    // authenticated user.
    // e.g., allow read, write: if request.auth.uid == userId;
    match /chats/{userEmail} {
      allow read, write: if true;
    }
  }
}
