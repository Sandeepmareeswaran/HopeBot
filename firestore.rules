
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own chat document.
    // The document ID must match their user email (which we use as a user ID).
    match /chats/{userEmail} {
      allow read, update, delete: if request.auth != null && request.auth.token.email == userEmail;
      allow create: if request.auth != null;
    }
  }
}
